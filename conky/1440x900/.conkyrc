background yes
update_interval 1

cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
# text_buffer_size 2048

alignment top_right
gap_x 14
gap_y 14
minimum_size 185 900
maximum_width 185
own_window yes
# own_window_type panel
own_window_type dock
own_window_transparent yes
# own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
own_window_hints sticky,above
border_inner_margin 0
border_outer_margin 14

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

override_utf8_locale yes
use_xft yes
xftfont Ubuntu:size=6
xftalpha 0.5
uppercase no

default_color c3aacd
color0 927f99
color1 f0f0f0
color2 c0c0c0
color3 909090
color4 707070
color5 505050
color6 363039
color7 6d5f72
color8 927f99
color9 b3cba9
#colorA 615566
#colorI 596554

lua_load ~/.conky/conky-rings.lua
lua_draw_hook_post main

TEXT
${voffset 62}
${goto 105}${color}${font Ubuntu:size=18}${time %e}
${goto 67}${color1}${voffset -24}${font Ubuntu:size=9}${time %A}
${goto 75}${color3}${voffset -2}${font Ubuntu:size=8}${time %b}${voffset -2}  ${color5}${font Ubuntu:size=14}'${time %y}
${voffset 20}${font}${color3}${alignr}${time %-Vw  /  %-jd}
${voffset -207}${font Ubuntu:size=40:style=Normal}${if_match "${exec is hidden}" == "hidden"}${color9}${else}${color2}${endif}${alignr} ${exec query tag}

${voffset -233}
