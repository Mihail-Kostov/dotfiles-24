# ........................................................................ Conky

# Usage: conky clock [on | off]

CONKYRC=${CONKYRC:-$HOME/.conkyrc.qclocktwo}

if pgrep -f "conky -c $CONKYRC" >/dev/null ;then
  [ "$1" = on ] || pkill -f "conky -c $CONKYRC"
else
  [ "$1" = off ] || /usr/bin/conky -c $CONKYRC 2>/dev/null &
fi

