# audio sink (destination) volume
pactl list \
| sed -n "/^Sink #$(sink)/,\$p" \
| sed '/^$/,$d' \
| grep -P '^\t*Volume:' \
| sed -r 's/.* ([0-9]*)% .*/\1/'


