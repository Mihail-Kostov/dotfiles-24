# ....................................................................... Script

# Usage: . parent
#        must be sourced in order to obtain correct parent id or called within
#        a script that is itself sourced, see log trace as called from herbstluftwm
#        example, see office vimbk

ps -ef | grep $PPID |
         sort |
         head -1 |
         awk '{ ps=$NF; sub( /.*\//, "", ps); print ps }'

