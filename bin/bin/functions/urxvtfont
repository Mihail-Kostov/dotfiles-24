# ................................................................... Urxvt font

# see bin/urxvt

# adjust font for various displays and video cards
if macbook ;then
  size=8
elif nvidia ;then
  is display +1680 && size=10 || size=8
elif laptop ;then
  size=9
else
  size=10
fi

echo "-fn xft:$MONOFONT:size=$size"

