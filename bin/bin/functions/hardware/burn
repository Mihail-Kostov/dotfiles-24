# ................................................................ Optical media

usage() {
  echo "usage: $(basename $0)  dvd | iso | <data>"
  exit 1
}

# when k3b fails try manually..
case $@ in
  h | '') usage ;;

  dvd) if [ $(ls -l /data/downloads/dvd/ | wc -l) -gt 1 ] ;then
         ls -l /data/downloads/dvd/
         if-no 'erase directory' && exit
         dvdbackup -i /dev/dvd -o /data/downloads/dvd/ -M
         title=$(basename /data/downloads/dvd/*)
         genisoimage -dvd-video -udf -V "$title" -o /data/downloads/dvd/dvd.iso "$title"
         if-yes 'burn iso to dvd' && burn iso
       fi ;;

  iso) if [ -e /data/downloads/dvd/dvd.iso ] ;then
         growisofs -dvd-compat -Z /dev/dvd=/data/downloads/dvd/dvd.iso
       fi ;;

  *) if [ $(ls -l /media/cdrom0/ | wc -l) -eq 1 ] ;then
       if-yes 'new session (initialize)' && growisofs -Z /dev/dvd -R -J $@
     else
       if-yes 'merge session (append)' && growisofs -M /dev/dvd -R -J $@
     fi
     echo '.. eject and select cdrom in thunar before next merge' ;;
esac

# vim: set ft=sh: #
