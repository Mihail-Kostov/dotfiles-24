# ....................................................................... Planck

usage() {
  echo "usage: $(basename $0) <keymap>"
  exit 1
}

[ "$*" ] || usage
cd $HOME/build/qmk_firmware/keyboards/planck
sudo make clean
sudo make KEYMAP=$1 dfu
sudo chown -cR $USER:users $HOME/build/qmk_firmware
cd -

