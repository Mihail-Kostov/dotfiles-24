# Hardware
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

#  ...................................................................... Tablet

usage() {
  echo "usage: $(basename $0)  l'eft | r'ight | a'll"
  exit 1
}

# allow DVI-# reference
case $@ in
  *0 | l*) xsetwacom --set 'Wacom Intuos4 WL stylus' MapToOutput '1680x1050+0+0' ;;
  *1 | r*) xsetwacom --set 'Wacom Intuos4 WL stylus' MapToOutput '2560x1600+1680+0' ;;
  a*     ) xsetwacom --set 'Wacom Intuos4 WL stylus' MapToOutput '4240x1600+0+0' ;;
  *      ) usage ;;
esac

# vim: set ft=sh: #
