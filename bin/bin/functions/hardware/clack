# Hardware
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ..................................................................... Keyboard

# Usage: clack [swap]

hint() {
    notify 'Typewriter Sounds' '↑ Super-Shift Minus\n↓ Super-Minus'
    # confirm enter key sound :-)
    mpg123 -o pulse /usr/share/qwertickle/typewriter-return.mp3 &
}

if [ -z $1 ] ;then
  # toggle typewriter sounds!
  if pidof qwertickle ;then
    killall qwertickle
    notify low 'Typewriter Sounds' 'Off'
  else
    qwertickle &
    hint
  fi
else
  # swap enter key sounds (see post_install/qwertickle)
  sudo swap /usr/share/qwertickle/typewriter-return.mp3 /usr/share/qwertickle/typewriter-return.mp3.swap
  pidof qwertickle && hint || clicky
fi

# vim: set ft=sh: #
