# .................................................................... Processes

# tentative kill..
if [ "$*" ] ;then
  if p $@ | grep -v "$0" ;then
    pids=$(p $@ | grep -v "$0" | awk '{ print $2 }')
    if-no "kill /$@/ $pids" || sudo kill -KILL $pids 2>/dev/null
  fi
fi

