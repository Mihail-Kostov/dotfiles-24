# ........................................................... pacman maintenance

# maximum number of package versions
depth=4

if if-no 'remove archived packages' ;then
  sudo paccache -rk$depth
  sudo paccache -ruk0
  sudo pacman-optimize
else
  sudo pacman -Sc --noconfirm
fi

