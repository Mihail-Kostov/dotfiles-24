# .................................................................... Conf file

usage() {
  echo "usage: $(basename $0) <file> <content>"
  echo "       $(basename $0) <file> <content> <sed expression>, where content search == not found"
  exit 1
}

case $# in
  2) grep -q "$2" $1 || sudo sed -i "\$a$2" $1 ;;
  3) grep -q "$2" $1 || sudo sed -i "$3" $1 ;;
  *) usage ;;
esac

