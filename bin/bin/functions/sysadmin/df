# ................................................................... Filesystem

/usr/bin/df -h
if [ -e /usr/bin/btrfs ] ;then
  echo
  sudo btrfs filesystem df /
  echo
  sudo btrfs filesystem du -s '/home /opt /usr /var'
fi

