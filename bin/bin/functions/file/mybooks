# File
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ................................................................. ebook folder

usage() {
  echo "usage: $(basename $0) mobi | epub"
  exit 1
}

case "$@" in
  mobi) find . -maxdepth 1 -name '*.mobi' -exec mybooks {} \; ;;
  epub) find . -maxdepth 1 -name '*.epub' -exec mybooks {} \; ;;

  *mobi | *epub) author=$(echo "$@" | sed -r 's/.* - (.*)\.(mobi|epub)/\1/')
                 [ -d "$author" ] || mkdir -v "$author"
                 mv -v "$@" "$author" ;;

  *) usage ;;
esac

# vim: set ft=sh: #
