# ........................................................................ Print

require 'term/ansicolor'
require 'sanitize'
require 'mail'
require 'time'

class String
  include Term::ANSIColor
end

# view email (see rox)
begin
  message = Mail.read(ARGV[0])
  to = message.to[0]
  from = message.from[0]
  subject = message.subject.sub(/.*\/\/\/([^\/]*)\/\/\/.*/, '\1').downcase.strip.squeeze(' ')
  date = message.date.strftime("%Y-%m-%d %H:%M:%S")
  print "Date: #{date}\n".green
  print "To: #{to}\n".green
  print "From: #{from}\n".green
  print "Subject: #{subject}\n".green
  begin
    text = (case message.mime_type
      when 'text/plain' then "#{message.body}"
      when /multipart\/.*/ then "#{message.text_part.body.decoded}".gsub(/\r\n/m, "\n")
      when 'text/html' then "#{message.body}".gsub(/<.*>/m, '').gsub(/.*>/m, '').gsub(/<.*/m, '').squeeze(' ').gsub(/\n /m, "\n")
      else raise
      end).gsub(/^ +/m, '')
    print "\nBody: ".green
    text.split("\n\n").each do |line|
      break if text =~ /^-- *$/
      print "#{line}\n"
    end
  rescue
    print ".. invalid mime type #{message.mime_type.red.bold}\n"
  end
rescue
  print ".. invalid mail #{ARGV[0].red.bold}\n" unless not ARGV[0]
end
