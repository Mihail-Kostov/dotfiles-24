# sdothum - 2016 (c) wtfpl

# Dev
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ....................................................................... Editor

# Usage: v [-f | -c <command>]* [<file>]*

ACTIVE="$HOME/stow/bin $HOME/stow/build $HOME/stow/herbstluftwm $HOME/stow/vimwiki"

# va va voom
SHELL=/usr/bin/dash
hlwm && [ -e $DYNAMIC ] && focus=focus
console && unset focus || G=-g

while :
do
  case $1 in
    -f) fg=-f
        shift ;;

    -c) cmd="-c '$2'"
        shift 2 ;;

    *) break ;;
  esac
done

if [ -z $1 ] ;then
  file=$(find -type f 2>/dev/null | filter | fzf --multi)
  [ "$file" ] || exit
else
  # dmenu configs escapes spaces BUT file="$@" evals differently than.. ??
  file=$(echo $@)
  if [ ! -e $1 ] ;then
    unset sudo
  elif [ -w $1 ] ;then
    unset sudo
  else
    sudo='sudo -s'
  fi
fi

[ $focus ] && herbstclient set_layout max
count=$(echo $file | wc -w)
[ $count -gt 1 ] && notify 'Gvim' "$count files to edit"
eval $focus $sudo vim $G $fg $cmd $file

housekeeping() {
  find $HOME/.vim/backups -size 0 -exec rm -fv {} \;
  find $HOME/.vim/backups -user root -exec sudo chown -c $USER:users {} \;
  # avoid nfs mounted Maildir (and unnecessary processing)
  server && find $HOME/Maildir -name '.viminf*.tmp' -exec rm -fv {} \;
  # synchronize raspberry pi (manually sync lesser active files)
  if cpu arm ;then
    rsync -q $ACTIVE $HOME/stownfs/
  else
    ping -c 1 -W 1 pi >/dev/null 2>&1 || exit
    rsync -q $ACTIVE pi:$HOME/stow/
  fi
}

(pwait "vim.*$G.*$fg.*$cmd.*$file" && housekeeping) &

# vim: set ft=sh: #
