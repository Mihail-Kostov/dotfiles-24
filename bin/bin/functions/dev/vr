# Dev
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ....................................................................... Editor

usage() {
  echo "usage: $(basename $0) <search>"
  exit 1
}

# prevent resource sucking attempt to scan home directory
[ $PWD = $HOME ] && depth=1 || depth=9

# v by content
[ "$1" ] || usage
file=$(rg --maxdepth $depth \
          --glob "!*/*cache" \
          --glob "!*cache/*" \
          --glob "!.git/*" \
          --glob "!.hg/*" \
          --glob "!.stack/*" \
          --color "always" \
          --regexp "$@" |
       fzf |
       nocolor |
       cut -d: -f1)
[ "$file" ] || exit
v "$file"

# vim: set ft=sh: #
