# Dev
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ......................................................... Revision differences

usage() {
  echo "usage: $(basename $0) [-b] <package> [folders]"
  exit 1
}

# diff current sources with dotfiles git repo
dotfiles=/net/depot/dotfiles
current=$HOME/stow

if [ "$1" = '-b' ] ;then
  B=$1
  shift
fi

[ $1 ] || usage
[ -d $HOME/stow/$1 ] || usage

if [ -d $dotfiles ] ;then
  if-no "sync $dotfiles repo" || ( cd $dotfiles && git pull )
else
  git clone git@github.com:sdothum/dotfiles.git $dotfiles
fi

dirdiff $B $current/$1 $dotfiles/$1 "$2"

# vim: set ft=sh: #
