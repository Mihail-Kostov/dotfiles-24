# ....................................................................... Editor

# v by content
files=$(al "$@")
# regex passed as search command causes file name mangling
echo "$@" | grep -q '^[[:alnum:]]*$' && v -c "/\v$@" $files || v $files
count=$(echo "$files" | wc -l)
[ $count -gt 1 ] && notify low "$count files to edit"

# vim: set ft=sh: #
