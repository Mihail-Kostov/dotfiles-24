# ...................................................................... Weather

city='45.4023,-75.7329'

connect confirm || exit

# cat worldweatheronline api key
while ! wego -backend forecast.io \
              -location $city \
              -days 2 \
              $(cat $HOME/.wego) \
              $@ 2>/dev/null
do
  # arm on boot delay..
  sleep 1
done

