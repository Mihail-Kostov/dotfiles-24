# .................................................................... Term font

# see urxvt wrapper

# adjust font for various displays and video cards on this system
if macbook ;then
  size=9
elif nvidia ;then
  is display +1680 && size=10 || size=9
elif laptop ;then
  size=9
else
  size=10
fi

echo "xft:$MONOFONT:size=$size"

