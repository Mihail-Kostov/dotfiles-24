# ......................................................... Distribution install

# restore customizations (not typically config files)
root=$HOME/build/root

if [ "$*" ] ;then
  original $1
  [ $# -eq 2 ] && host=.$2
  [ -e ${1%/*} ] || sudo mkdir -pv ${1%/*}
  [ -e $1 ] && original $1
  echo '.. copying '$(sudo cp -v --no-preserve=mode,ownership $root/.${1}$host $1)
  annotate "check customization $1"
fi

# vim: set ft=sh: #
