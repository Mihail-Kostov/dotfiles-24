# Package
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ........................................................... Package management

usage() {
  echo "usage: $(basename $0) [<package>]"
  exit 1
}

[ "$1" = help ] && usage

# package history
ph() { egrep '\[ALPM\] (installed|reinstalled|upgraded)' /var/log/pacman.log ;}

if [ $1 ] ;then
  ph | grep "$@"
else
  ph
fi

# vim: set ft=sh: #
