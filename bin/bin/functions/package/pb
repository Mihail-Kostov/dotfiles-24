# Package
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ........................................................... Package management

sudo pacman -Sy
pacaur -Qu
if-no 'upgrade system' && exit
for i in $(pacaur --color never -Qu | awk '{ print $3 }')
do
  underline
  ditto $i
  pm S $i
done

