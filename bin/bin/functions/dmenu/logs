# ........................................................................ Files

# view log files
[ "$*" ] && mode='Watch' || mode='View'
cd /tmp
ln_logs

file=$(previous logs)
file=$(ls *.log |
       sort |
       sed 's/.log//' |
       dmenu "$mode Log" $file -no-custom) || exit

history logs $file
case $mode in
  View ) [ $file ] && term "$file" MAX less $file.log ;;
  Watch) [ $file ] && term "$file" tail -f $file.log ;;
esac

