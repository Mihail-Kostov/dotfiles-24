# ................................................................. Media player

# play media (see rox, dmenu movies, dmenu series)
if arm; then
  noir omxplayer "$@"
else
  urgency=low notify 'MPV' '1-2  Contrast\n3-4  Brightness\n5-6  Gamma\n7-8  Saturation'
  mpv --vf=eq "$@" >/dev/null 2>&1
fi
# upon single fullscreen window closure
herbstclient emit_hook focus_changed

# vim: set ft=sh: #
