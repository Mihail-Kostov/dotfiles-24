# ....................................................................... Editor

# list current fkey assignments
fkeys() {
  cd $HOME/.vim/config
  for i in $(seq 1 12)
  do
    title "F$i"
    ack "<.*F$i>" *.vim | grep -v 'vim:[0-9]*: *"'
  done

  title "LEADER"
  ack "<leader>" *.vim
  cd - >/dev/null
  echo
}

fkeys | less -RX

# vim: set ft=sh: #
