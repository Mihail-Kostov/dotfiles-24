#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Shell
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ................................................................... Fuzzy jump

# fish shell ignores non-fish cd's, see j.fish instead
case $# in
  0) pwd | grep -q $HOME && dir=$(fcache d $HOME | fzf) ||
                            dir=$(fcache d $PWD | fzf) ;;

  1) [ -d $1 ] && dir=$(fcache d $1 | fzf) ||
                  dir=$(fcache d $HOME | fzf -q $1) ;;

  2) [ -d $1 ] && dir=$(fcache d $1 | fzf -q $2) ||
                  dir=$(fcache d $HOME | egrep "$1" | fzf -q $2) ;;
esac

cd $dir

# vim: set ft=sh: #
