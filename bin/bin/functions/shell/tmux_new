# Shell
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................................. New session

# Usage: tmux_new [name [command]]*

export TMUX_TMPDIR=/tmp

[ $1 ] && { export TMUX=$1 ; shift ;} || export TMUX=tmux
[ "$1" ] || fortune=FORTUNE
term "${TMUX}" $fortune VERTICAL tmux -S /tmp/tmux:$TMUX 'new-session -n ""' $@

