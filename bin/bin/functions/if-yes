#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Shell
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ...................................................................... Prompts

sig=${sig:--TERM}

# if yes && ..
underline $1

while :
do
  rm -f /tmp/abort 2>/dev/null
  printf 'continue? [yes]/no/abort : '
  read CONTINUE
  echo
  case "$CONTINUE" in
    y | Y | '') exit 0 ;;
    n | N)      exit 1 ;;

    a | A) echo $PPID >/tmp/abort
           kill $sig $PPID ;;
  esac
done

# vim: set ft=sh: #
