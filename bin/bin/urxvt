#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# X11 System
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ..................................................................... Terminal

# URxvt client/server
export SHELL=/usr/bin/zsh
# adjust font for macbook nvidia display
if macbook ;then
  fn='-fn xft:PragmataPro:size=9'
elif nvidia ;then
  fn='-fn xft:PragmataPro:size=11'
fi 

eval urxvtc $fn $@
if [ $? -eq 2 ] ;then
  urxvtd -q -o -f 2>/tmp/urxvt.log
  eval urxvtc $fn $@
fi

# vim: set ft=sh: #
