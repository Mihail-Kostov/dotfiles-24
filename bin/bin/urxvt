# ..................................................................... Terminal

# URxvt client/server
export SHELL=/usr/bin/zsh
# adjust font for macbook nvidia display
nvidia && fn='-fn xft:PragmataPro:size=10'

eval urxvtc $fn $@
if [ $? -eq 2 ] ;then
  urxvtd -q -o -f 2>/tmp/urxvt.log
  eval urxvtc $fn $@
fi

# vim: set ft=sh: #
