# ............................................................. Root backgrounds

# clean up root background library
for i in $(find ${BACKGROUND%/default}/ -name '*.png')
do
  color=$(echo $i | sed -r 's|.*/(.*).png|\1|')
  setroot --blank-color "#$color" 2>/dev/null
  echo ${i#*colors/}
  if-no 'delete this background' && continue
  rm $i
done

# vim: set ft=sh: #
