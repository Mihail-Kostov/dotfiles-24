# see .imapfilter/dovecot.lua

# ...................................................................... sdothum

[Repository local-sdothum]
type = Maildir
localfolders = /home/shum/Maildir/sdothum
sep = /

[Repository remote-sdothum]
type = Gmail
remotehost = imap.gmail.com
auth_mechanisms = LOGIN
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = sdothum@gmail.com
# remotepasseval = imap_password("offlineimap", "sdothum@gmail.com")
remotepass = maaike00
maxconnections = 3
holdconnectionopen = no
keepalive = 60
realdelete = no
folderfilter = lambda foldername: foldername not in ['SENT', '[Gmail]/All Mail', '[Gmail]/Chats', '[Gmail]/Important', '[Gmail]/sent', '[Gmail]/Sent Mail' '[Gmail]/Starred']

