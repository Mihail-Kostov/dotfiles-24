#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl

# Post_install
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................................... rutorrent

ln -sf /usr/share/webapps/rutorrent /opt/nginx/html/

grep -q rutorrent /etc/php/php.ini || sudo sed -i '/^open_basedir = "/s|= "|= "/etc/webapps/rutorrent/conf/:/usr/share/webapps/rutorrent/php/:/usr/share/webapps/rutorrent/:|' /etc/php/php.ini

grep -q scgi_port  $HOME/.rtorrent.rc || sed -i '$a\
\
scgi_port = localhost:5000' $HOME/.rtorrent.rc

sudo chmod 0777 /opt/nginx/html/rutorrent/share/settings
sudo chmod 0777 /opt/nginx/html/rutorrent/share/torrents
sudo chmod 0777 /opt/nginx/html/rutorrent/share/users

annotate "connect on htttp://localhost/rutorrent/"

# vim: set ft=sh: #
