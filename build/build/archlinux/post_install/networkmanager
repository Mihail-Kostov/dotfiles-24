# ............................................................... networkmanager

if ! grep -q 'dhcp=dhcpcd' /etc/NetworkManager/NetworkManager.conf ;then
  sudo sed -i '$a\
dhcp=dhcpcd\
' /etc/NetworkManager/NetworkManager.conf
fi

server || systemd enable NetworkManager

