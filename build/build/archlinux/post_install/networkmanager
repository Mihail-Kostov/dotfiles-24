# ............................................................... networkmanager

grep -q 'dhcp=dhcpcd' /etc/NetworkManager/NetworkManager.conf ||
     original /etc/NetworkManager/NetworkManager.conf
     sudo sed -i '$a\
dhcp=dhcpcd\
' /etc/NetworkManager/NetworkManager.conf

systemd enable dhcpcd
systemd enable NetworkManager

nmtui

