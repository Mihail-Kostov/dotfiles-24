# ...................................................................... privoxy

conf /etc/privoxy/config '^enable-edit-actions.*1' '/^enable-edit-actions/s/0/1/'
if [ -f /usr/bin/polipo ] ;then
  conf /etc/privoxy/config 'forward / localhost:8123'
fi

systemd enable privoxy
# annotate "configure browser proxies to localhost:8118"

