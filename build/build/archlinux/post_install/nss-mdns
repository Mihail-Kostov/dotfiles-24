# ..................................................................... nss-mdns

original /etc/nsswitch.conf
grep mdns_minimal /etc/nsswitch.conf || sudo sed -i '/^hosts:/s/ resolve/ mdns_minimal resolve/' /etc/nsswitch.conf

systemd restart avahi-daemon
annotate 'avahi-discover to list network shareable devices'

