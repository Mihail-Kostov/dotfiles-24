# byobu
if grep -q '\$HOME' /usr/share/byobu/profiles/tmuxrc ;then
  original /usr/share/byobu/profiles/tmuxrc
  sudo sed -i 's,\$HOME/.byobu,\$BYOBU_CONFIG_DIR,' /usr/share/byobu/profiles/tmuxrc
fi

