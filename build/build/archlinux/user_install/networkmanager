# User_install
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ............................................................... networkmanager

hosts=$HOME/build/root/etc/hosts

# get network hosts table
original /etc/hosts
config_install L /etc/hosts

# add host ip address
ip=$(hostname --ip-address)
hostname=$(hostname)
grep -q " $hostname *" $hosts && sed -i "/ $hostname */s/^[^ ]*/$ip/" $hosts ||
                                 sed -i "/localhost.*ttrss/a$ip $hostname" $hosts

sudo wifi-menu

! server && annotate 'check /etc/hosts (luna) if wlan0 errors on boot'

# vim: set ft=sh: #
