#
# screen config
# for when curses is broken on tmux!
# 

hardstatus          alwayslastline
#hardstatus string  '%{= kg}[ %{r}%H %{g}][%= %{= ky}%?%-Lw%?%{R}[%{G}%n*%f %t%?(%u)%?%{R}]%{y}%?%+Lw%?%?%= %{g}][%{B} %Y-%m-%d %{w}%C%a %{g}]'
hardstatus string   '%{= kg}-%{r}%H%{g}-%= %{= ky}%?%-Lw%?%{r}[%{G}%n*%f %t%?(%u)%?%{r}]%{y}%?%+Lw%?%?%= %{g}-%{B}%Y-%m-%d %{w}%C%a%{g}-'
startup_message     off
defscrollback       9999
monitor             on
shell               fish

# Default screens
# screen -t todo        0   fish -c todo
# screen -t fm      1   fish -c ranger ~/.config
# screen -t mpd     2   ncmpcpp
# screen -t radio       3   pyradio
# screen -t bt      4   rtorrent
# screen -t nzb     5   fish -c nzb
# screen -t news        6   fish -c news
# screen -t usenet  7   slrn
# screen -t chat        8   irssi
# screen -t mail        9   fish -c mutt
# screen -t imap        10  fish -c imap
screen -t todo      0   fish -c todo
screen -t ~/        1   fish -c ranger .config
screen -t [>        2   ncmpcpp
screen -t *>        3   pyradio
screen -t bt        4   rtorrent
screen -t nzb       5   fish -c nzb
screen -t www       6   fish -c news
screen -t //        7   slrn
screen -t :o        8   irssi
screen -t @         9   fish -c mutt
screen -t imap      10  fish -c imap
select 9

