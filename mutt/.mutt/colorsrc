# ~/.config/mail/mutt/colorsrc

# brighten up stuff with colours, for more colouring examples see:
# http://aperiodic.net/phil/configs/mutt/colors
color attachment brightyellow default
color bold brightyellow default
color error brightred default
color hdrdefault green default
color indicator brightwhite red
color markers brightblue default
color message white default
#color normal white default
color search brightyellow red
#color sidebar_new brightblack default 
color sidebar_new brightyellow default 
color normal yellow default 
color signature red default
color status brightblue default
color tilde brightblack default
color tree red default
color underline yellow default

# Coloring quoted text
color quoted green default
color quoted1 yellow default
color quoted2 red default
color quoted3 cyan default
color quoted4 white default
color quoted5 green default
color quoted6 yellow default
color quoted7 red default
color quoted8 cyan default
color quoted9 white default

# Colorize smileys: :-) ;-) :-/ :-(
color body green default "[[:alpha:]]\+://[^ ]*"
color body yellow default "[;:]-[)/(|]"
color body yellow default "[;:][)/(|]"

color header brightgreen default ^From:
#color header brightcyan default ^To:
#color header brightcyan default ^Cc:
#color header brightcyan default ^Reply-To:
color header brightblue default ^Subject:

color index brightcyan default ~F
color index brightyellow default ~N
color index yellow default ~O
color index brightblue default ~T
# highlight overrides
color index yellow default ~z>10k
color index magenta default \\[.*\\]
color index brightblack default ~P
color index red default ~D

mono attachment underline
mono body underline "(ftp|http|file)://[^ >)]+"
mono body underline [-a-z_0-9.]+@[-a-z_0-9.]+
mono header bold ^From:
mono header underline ^Subject:
mono quoted bold

# identifies URLs
color body brightblue default (https?|ftp)://[\-\.,/%~_:?&=\#a-zA-Z0-9]+
# identifies email addresses
color body brightred default [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+

