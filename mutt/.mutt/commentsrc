# ~/.config/mail/mutt/gmailrc
# folder-hook for +gmail/.*

set from = "comments@thedarnedestthing.com"
my_hdr From: Steven Hum <comments@thedarnedestthing.com>
#set signature = ~/.signature

set copy = no
set record = "+comments/system/Sent"
set postponed = "+comments/system/Drafts"
# the inbox that will open by default
set spoolfile = "+comments/thedarnedestthing"

# pgp settings
unmy_hdr X-PGP-Key
set pgp_autosign = no

# move to spam
macro index,pager S "<save-message>=comments/system/Spam<enter>"
# set up trash
folder-hook . "macro index d <save-message>=comments/system/Trash<enter>"
folder-hook . "macro pager d <exit><save-message>=comments/system/Trash<enter>"
folder-hook =comments/system/Trash "macro index,pager d <delete-message>"
# empty trash
macro index,pager () "<shell-escape>imapfilter -v -c ~/.config/mail/imapfilter/trash-comments.lua<enter>" "empty trash & spam mailboxes"

# Required for msmtp to know which account to use for emails
set use_from = yes
#set sendmail = "/usr/bin/msmtp -a gmail"
# queue messages offline for cron delivery
set sendmail = "/usr/local/bin/msmtp-enqueue.sh -a comments"
#macro index,pager $ "<shell-escape>/usr/local/bin/msmtp-runqueue.sh<enter>" "send mail queue"
