! to reload settings without needing to restart xserver:
!   xrdb -merge ~/.Xresources

! ........................................................................ XTerm

XTerm*bellIsUrgent:           true
XTerm*charClass:              33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm*cursorBlink:            true
XTerm*cursorColor:            yellow
XTerm*faceName:               PragmataPro:pixelsize=16
XTerm*fullscreen:             never
XTerm*internalBorder:         9
XTerm*locale:                 en_US.utf8
XTerm*pointerColorBackground: black
XTerm*pointerColor:           white
XTerm*SaveLines:              9000
XTerm*scaleHeight:            1.15
XTerm*ScrollBar:              false
XTerm*ScrollKey:              true
XTerm*selectToClipboard:      true
XTerm*utf8:                   1
XTerm*visualbell:             true

! ...................................................................... Colours

*termName:                    xterm-256color

! ! color scheme
*background:                  #000000
*foreground:                  #fdf6e3
*cursorColor:                 #fdf6e3
! black
*color0:                      #101010
*color8:                      #565656
! red
*color1:                      #bd4a4a
*color9:                      #cc6666
! green
*color2:                      #A1B52F
*color10:                     #bde077
! yellow
*color3:                      #e8ae5b
*color11:                     #ffd965
! blue
*color4:                      #597FA5
*color12:                     #66aabb
! magenta
*color5:                      #FF4B69
*color13:                     #f26b9e
! cyan
*color6:                      #72ad8c
*color14:                     #9fe3bc
! white
*color7:                      #BDB8AA
