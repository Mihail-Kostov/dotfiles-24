
[ $TRACE ] && CHILD="toggle/panel $@" . $PARENT

# herbstluftwm
# ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬

# ................................................................. Toggle panel

. ${0%/toggle}/config/ENV

[ -e $PANEL ] && rm -f $PANEL || touch $PANEL

restore panel

if [ $PANEL_MARGIN ] ;then
  monitor=$(query monitor)
  if [ -e $PANEL ] ;then
    [ ${PANEL_BOTTOM} ] && herbstclient pad $monitor 0 0 $PANEL_HEIGHT 0 \
                        || herbstclient pad $monitor $PANEL_HEIGHT 0 0 0
  else
    herbstclient pad $monitor 0 0 0 0
  fi
fi

