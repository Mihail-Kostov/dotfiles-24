[ $TRACE ] && CHILD="toggle/dmenu $@" . $PARENT

# herbstluftwm
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ............................................................... Toggle dmenu

# Usage: toggle dmenu [off | on]

case $1 in
  off) [ -e $DMENU ] || exit ;;
  on ) [ -e $DMENU ] && exit ;;
esac
[ -e $DMENU ] && rm -f $DMENU || touch $DMENU

