#!/usr/bin/dash
# sdothum - 2016 (c) wtfpl
[ $TRACE ] && CHILD="bin/walltheme $@" . $PARENT

# herbstluftwm
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# .................................................... Set wallpaper color theme

# if slickpicker doesn't return color value, only present once
which slickpicker 2>/dev/null && color=true

# see draw root
while :
do
  if [ "$color" ] ;then
    color=$(slickpicker)
    color=${color#\#}
  fi
  if [ "$color" ] ;then
    conky theme test "$color"
  else
    conky theme test "$(randcolor)"
  fi
  [ $? -eq 0 ] && break
  # see if-no if-yes prompts
  [ -e /tmp/abort ] && break
done

# vim: set ft=sh: #
