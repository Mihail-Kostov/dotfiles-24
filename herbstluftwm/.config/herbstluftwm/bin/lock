[ $TRACE ] && CHILD="bin/lock $@" . $PARENT

# herbstluftwm
# ▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂▂

# ........................................................ Persistent lock state

# Usage: lock [command], multiple commands chained with dot

touch $LOCK
[ "$*" ] && herbstclient chain . lock . $@ || herbstclient lock

